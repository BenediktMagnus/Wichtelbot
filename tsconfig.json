{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"resolveJsonModule": true,

		"outDir": "build",

		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"allowJs": false,

		"sourceMap": true,
		"removeComments": true,
	},
	"include": [
		"scripts/*.ts",
		"scripts/**/*.ts"
	]
}