{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",

		"outDir": "build",

		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"allowJs": false,
		"esModuleInterop": true,

		"sourceMap": true,
		"removeComments": true
	},
	"include": [
		"scripts"
	]
}
